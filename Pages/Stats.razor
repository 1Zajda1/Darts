@page "/Stats"
@using Sdc.Services;
@inject IPlayerService playerService

<h3>Nejvyšší nához bodů TOP 10:</h3>
<table class="table table-striped table-responsive table-sm">
    <thead>
        <tr>
            <th>Plejer</th>
            <th class="text-right">Body</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in statistiky)
        {

            <tr>
                <td>@item.Name</td>
                <td class="text-right fw-bold">@item.Number</td>
            </tr>
        }
    </tbody>
</table>


<h3>Nejvyšší zavření TOP 10:</h3>
<table class="table table-striped table-responsive table-sm">
    <thead>
        <tr>
            <th>Plejer</th>
            <th class="text-right">Body</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in statistikyZavreni)
        {

                <tr>
                    <td>@item.Name</td>
                    <td class="text-right fw-bold">@item.Number</td>
                </tr>
        }
    </tbody>
</table>

@code {
    private List<StatsModel> statistiky = new List<StatsModel>();
    private List<StatsModel> statistikyZavreni = new List<StatsModel>();
    protected override void OnInitialized()
    {
        statistiky = playerService.GetStats(null);
        statistikyZavreni = playerService.GetCloseStats(null);
    }
}
